<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AtividadeInicial" >

    <TextView
        android:id="@+id/atividade_inicial_rotulo_progresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/progresso"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ProgressBar
        android:id="@+id/atividade_inicial_barra_progresso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/atividade_inicial_rotulo_progresso" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="reiniciar"
        android:src="@drawable/reiniciar" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_um"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="60dp"
        android:onClick="um"
        android:src="@drawable/um" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_tres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="130dp"
        android:onClick="tres"
        android:src="@drawable/tres" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_quatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="130dp"
        android:onClick="quatro"
        android:src="@drawable/quatro" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_cinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="200dp"
        android:onClick="cinco"
        android:src="@drawable/cinco" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_seis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="200dp"
        android:onClick="seis"
        android:src="@drawable/seis" />

    <ImageView
        android:id="@+id/atividade_inicial_imagem_dois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="60dp"
        android:onClick="dois"
        android:src="@drawable/dois" />

    <TextView
        android:id="@+id/atividade_inicial_rotulo_parabens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/parabens"
        android:textSize="20pt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/atividade_inicial_rotulo_voce_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/atividade_inicial_rotulo_progresso"
        android:layout_alignRight="@+id/atividade_inicial_barra_progresso"
        android:layout_below="@+id/atividade_inicial_imagem_reiniciar"
        android:layout_centerVertical="true"
        android:layout_marginTop="160dp"
        android:text="@string/voce_tem"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="10pt" />

</RelativeLayout>
